<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundgeneral"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".DetallesObjeto_Activity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_imgObjeto_detalle"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        android:src="@mipmap/ic_launcher_cee"/>

                    <Button
                        android:id="@+id/btn_editar_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/tv_nombre_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paleta de ping pong"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/tv_estado_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado: Disponible"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tv_fechaReg_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrado: 12/05/2018"
                        android:textSize="18dp"/>


                    <TextView
                        android:id="@+id/tv_ult_prest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último prestatario: Oscar Fritis"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tv_ultvez_prest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="última vez préstado: 25/09/2018"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tv_ultvez_dev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última vez devuelto: 25/09/2018"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tv_ult_prestamista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último prestamista: Gema Espinoza"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tv_ult_receptor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último receptor: Matias Hurtado"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="50dp"
            android:paddingBottom="80dp">

            <Button
                android:id="@+id/btn_prestar_objeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prestar objeto"
                android:onClick="prestarClick"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:paddingRight="100dp"
                android:paddingLeft="100dp"/>



            <Button
                android:id="@+id/btn_eliminar_objeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="Eliminar"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:onClick="onDeleteClick"/>

        </LinearLayout>
    </LinearLayout>




</ScrollView>