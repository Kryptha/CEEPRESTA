<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/id_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/id_imagen_tarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_cee"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/id_nombre_objeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paleta de ping-pong"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/id_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 1"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/id_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría: Tecnología"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/id_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: No disponible"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/id_fechareg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de registro: 18/12/2020"
                android:textColor="@color/black"
                android:gravity="left"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>