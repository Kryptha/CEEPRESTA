<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgeneral">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgv_registroUsuario"
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/adduserr"/>

                <TextView
                    android:id="@+id/txv_msg_registerusuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añadir un usuario"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_descripcion_registrar_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txv_msg_registerusuario"
                    android:text="Recuerde rellenar los campos obligatorios"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editxt_name_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#495358"
                android:hint="Nombre del usuario" />

            <EditText
                android:id="@+id/editxt_surname_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#495358"
                android:hint="Apellido del usuario" />


            <EditText
                android:id="@+id/editxt_correo_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#495358"
                android:textSize="18dp"
                android:layout_below="@+id/editxt_name_object"
                android:hint="Correo del usuario" />

            <EditText
                android:id="@+id/editxt_password_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#495358"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:layout_below="@+id/editxt_name_object"
                android:hint="Ingrese la contraseña" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/txt_genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/white"
                    android:text="Género"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_genero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txt_genero"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/txt_rol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/white"
                    android:text="Rol"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_rol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txt_rol"/>
            </RelativeLayout>




            <Button
                android:id="@+id/btn_save_añadirUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/btn_purple"
                android:text="Añadir usuario"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_verUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="#F44336"
                android:text="Volver a la lista"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>