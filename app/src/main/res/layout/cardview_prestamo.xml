<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/id_tarjeta_prestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/id_imagen_prestamo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_cee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/idCV_prestamista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prestamista: Oscar Fritis"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/idCV_prestatario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prestatario: Sebastián Figueroa"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/idCV_fechaPrestamo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Prestamo: 28/12/2020"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/idCV_fechaEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Entrega: 03/01/2021"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/idCV_fechaDevolucion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Devolución: 01/01/2021"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/idCV_receptor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receptor: Oscar Fritis"
                android:textColor="@color/black"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/id_imagen_devolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@mipmap/back_to_box"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>